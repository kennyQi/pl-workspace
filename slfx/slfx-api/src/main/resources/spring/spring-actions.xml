<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx-3.0.xsd 
	http://www.springframework.org/schema/jee 
	http://www.springframework.org/schema/jee/spring-jee-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">
		
	<bean id="actionContext" class="slfx.api.controller.base.ActionContext">
		<property name="actionMap">
			<map>
				<!-- 机票 -->
				<entry key="JPQueryFlight" value-ref="jpQueryFlightController" />
				<entry key="JPAskOrderTicket" value-ref="jpAskOrderTicketController" />
				<entry key="JPOrderCreate" value-ref="jpOrderCreateController" />
				<entry key="JPCancelTicket" value-ref="jpCancelTicketController" />
				<entry key="JPQueryFlightPolicy" value-ref="jpQueryFlightPolicyController" />
				<entry key="JPOrderQuery" value-ref="jpOrderQueryController" />
				<entry key="JPQueryCityAirCode" value-ref="jpQueryCityAirCodeController" />
				<entry key="JPCancelTicketReason" value-ref="jpCancelTicketReasonController" />
				
				<!-- 门票 -->
				<entry key="MPQueryScenicSpots" value-ref="mpQueryScenicSpotsController" />
				<entry key="MPQueryPolicy" value-ref="mpQueryPolicyController" />
				<entry key="MPCreateOrder" value-ref="mpCreateOrderController" />
				<entry key="MPQueryDatePrice" value-ref="mpQueryDatePriceController" />
				<entry key="MPQueryOrder" value-ref="mpQueryOrderController" />
				<entry key="MPSyncOrder" value-ref="mpSyncOrderController" />
				<entry key="MPOrderCancel" value-ref="mpOrderCancelController" />

				<!-- 线路 -->
				<entry key="XLQueryLine" value-ref="xlQueryLineController" />
				<entry key="XLQueryLineOrder" value-ref="xlQueryLineOrderController" />
				<entry key="XLCreateLineOrder" value-ref="xlCreateLineOrderController" />
				<entry key="XLCancleLineOrder" value-ref="xlCancleLineOrderController" />
				<entry key="XLPayLineOrder" value-ref="xlPayLineOrderController" />
				<entry key="XLModifyLineOrderTraveler" value-ref="xlModifyLineOrderTravelerController" />
			</map>
		</property>
	</bean>
</beans>