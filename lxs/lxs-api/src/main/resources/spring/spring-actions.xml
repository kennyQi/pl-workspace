<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx-3.0.xsd 
	http://www.springframework.org/schema/jee 
	http://www.springframework.org/schema/jee/spring-jee-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">


	<bean id="actionContext" class="lxs.api.action.ActionContext">
		<property name="actionMap">
			<map>
			<entry key="SendSMS" value-ref="SendSMSAction" />
				<!-- 用户管理 -->
				<entry key="GetSMSValidCode" value-ref="GetSMSValidCodeAction" />
				<entry key="Register" value-ref="RegisterAction" />
				<entry key="QueryUser" value-ref="QueryUserAction" />
				<entry key="ModifyUserInfo" value-ref="ModifyUserInfoAction" />
				<entry key="ChangePassword" value-ref="ChangePasswordAction" />
				<entry key="Login" value-ref="LoginAction" />
				<entry key="ResetPasswordCheckMobile" value-ref="ResetPasswordCheckMobileAction" />
				<entry key="ResetPassword" value-ref="ResetPasswordAction" />
				<!-- 联系人 -->
				<entry key="CreateContacts" value-ref="CreateContactsAction" />
				<entry key="DeleteContacts" value-ref="DeleteContactsAction" />
				<entry key="ModifyContacts" value-ref="ModifyContactsAction" />
				<entry key="QueryContacts" value-ref="QueryContactsAction" />
				<!-- 线路 -->
				<entry key="QueryLine" value-ref="QueryLineAction" />
				<entry key="QueryDateSalePrice" value-ref="QueryDateSalePriceAction" />
				<entry key="QueryDayRoute" value-ref="QueryDayRouteAction" />
				<entry key="QueryLineActivity" value-ref="QueryLineActivityAction" />
				<!-- 订单 -->
				<entry key="CreateLineOrder" value-ref="CreateLineOrderAction" />
				<entry key="GetShouldPayMoney" value-ref="GetShouldPayMoneyAction" />
				<entry key="UpdateLineOrderStatus" value-ref="UpdateLineOrderStatusAction" />
				<entry key="QueryLineOrder" value-ref="QueryLineOrderAction" />
				<entry key="PayBargainMoney" value-ref="PayBargainMoneyAction" />
				<!-- 推荐 -->
				<entry key="QueryRecommend" value-ref="QueryRecommendAction" />
				<!-- 主题 -->
				<entry key="QuerySubject" value-ref="QuerySubjectAction" />
				<!-- 热门目的地 -->
				<entry key="QueryHotDestinationCity" value-ref="QueryHotDestinationCityAction" />
				<!-- 轮播 -->
				<entry key="QueryCarousel" value-ref="QueryCarouselAction" />
				<!-- 启动页 -->
				<entry key="QueryLinkPage" value-ref="QueryLinkPageAction" />
				<!-- 随心游简介 -->
				<entry key="QueryIntroduction" value-ref="QueryIntroductionAction" />
				<!-- 保险 -->
				<entry key="GetInsurance" value-ref="GetInsuranceAction" />
				
				<!-- 门票 -->
				<entry key="CreateTicketOrder" value-ref="CreateTicketOrderAction"/>
				<entry key="QueryScenicSpot" value-ref="QueryScenicSpotAction"/>
				<entry key="QueryScenicSpotSelective" value-ref="QueryScenicSpotSelectiveAction"/>
				<entry key="QueryScenicSpotInfo" value-ref="QueryScenicSpotInfoAction"/>
				<entry key="QueryTicketOrder" value-ref="QueryTicketOrderAction"/>
				<entry key="QueryTicketOrderInfo" value-ref="QueryTicketOrderInfoAction"/>
				<entry key="QueryTicketPolicyPriceCalendar" value-ref="QueryTicketPolicyPriceCalendarAction"/>
				<entry key="QueryDZPWProvince" value-ref="QueryDZPWProvinceAction"/>
				<entry key="QueryDZPWCity" value-ref="QueryDZPWCityAction"/>
				<entry key="QueryDZPWArea" value-ref="QueryDZPWAreaAction"/>
				<entry key="CloseTicketOrder" value-ref="CloseTicketOrderAction"/>
				<entry key="RefundTicketOrder" value-ref="RefundTicketOrderAction"/>
				<entry key="QueryGroupTicket" value-ref="QueryGroupTicketAction"/>
				<entry key="GetAlipayConfig" value-ref="GetAlipayConfigAction"/>
			</map>
		</property>
	</bean>
</beans>