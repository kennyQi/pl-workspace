<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
	http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd">

	<!-- RabbitMQ连接工厂 -->
	<rabbit:connection-factory id="connectionFactory" host="192.168.2.211" port="5672" virtual-host="hsl" 
		username="hsldev" password="123456" />
		
	<!-- RabbitMQ管理员 -->
	<rabbit:admin connection-factory="connectionFactory" />
		
	<!-- 消息交换机 -->
	<rabbit:topic-exchange name="hslExchange_dev"/>
	
	<!-- 消息转换器 -->
	<bean id="jsonMessageConverter" class="org.springframework.amqp.support.converter.JsonMessageConverter" />
	 
	<!-- 消息工具 -->
	<rabbit:template id="amqpTemplate" connection-factory="connectionFactory" exchange="hslExchange_dev" 
		encoding="UTF-8" message-converter="jsonMessageConverter" />

</beans>  

